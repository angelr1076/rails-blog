<div id="sign-in">
<h1>Doggie Login</h1>
  <%= form_tag(create_session_path, method: 'post') do %>
    <div class="user">
      <span class="username"><%= label_tag(:username)%> 
      <%= text_field_tag :username, nil, placeholder: 'username@email.com'%></span>
    </div>
    </br>
    <div class="password">
      <%= label_tag(:password)%>
      <%= password_field_tag :password, nil, placeholder: 'user_password'%>
    </div>
    </br>
    <button>
      <h2>Login <%= submit_tag("Login")%> </h2>
    </button>
  <% end %>
</div>

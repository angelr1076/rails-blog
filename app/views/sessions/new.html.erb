<div id="sign-in">
  <%= form_tag(create_session_path, method: 'post') do %>
    <span class="username"><%= label_tag(:username)%> 
    <%= text_field_tag(:username)%></span>
    </br>
    <%= label_tag(:password)%>
    <%= password_field_tag(:password)%>
    <%= submit_tag("Login")%>
  <% end %>
</div>

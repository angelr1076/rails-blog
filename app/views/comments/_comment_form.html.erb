<%# template for comment creation and edit %>
<div id="comment-form">
    <%= form_for @comment do |f| %>
        <h3><%= f.label :Add_comment %></h3>
        <hr>
        <%= f.text_area :body, class: "text-area" %>
        <%= f.hidden_field :post_id %>
        <br>
        <button>
            <h2>Submit <%= f.submit %> </h2>
        </button>
    <% end %>
</div>
